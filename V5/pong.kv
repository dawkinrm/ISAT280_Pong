#:kivy 1.0.9


<MenuWidget>:
    pos: app.root.center
    size: (app.root.size[0]/4., app.root.size[1] /4.)
    canvas:
        Rectangle:
            size: self.size
            pos: (app.root.center[0] - self.width/2., app.root.center[1]- self.height/2.)
            
    
    AnchorLayout:
        pos: (app.root.center[0] - self.width/2., app.root.center[1]- self.height/2.)
        anchor_x: "center"
        anchor_y: "center"
        padding: 5  
        
        BoxLayout:
            orientation: 'vertical'
            Label:
                #NOT SHOWING
                text: "MENU"
                bold: True
                color: (0, 0, 0, 1)
                font_size: 20
            Button:
                text: "RESUME"
                bold: True
                on_press:
                    app.pong_game.close_menu()
            Button:
                text: "EXIT"
                bold: True
                on_press:
                    app.pong_game.stop()


<PongBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    
    canvas:
        Color:
            rgba: 0, 1, 0, 1    #color of middle line
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
    Label:
        font_size: 45  
        center_x: root.width / 4
        top: root.top 
        text: str(app.root.children[1].getP1Name())
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    Label:
        font_size: 45  
        center_x: root.width * 3 / 4
        top: root.top
        text: str(app.root.children[1].getP2Name())
    
    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y
