#:import Window kivy.core.window
#:import Label kivy.uix.label
#:import Button kivy.uix.button
#:import BoxLayout kivy.uix.boxlayout
#:import AnchorLayout kivy.uix.anchorlayout
#:import FloatLayout kivy.uix.floatlayout
#:import Canvas kivy.graphics

MyScreenManager:
	MainMenuScreen:
	AboutScreen:
	HelpScreen:
	ConfigScreen:
	PongScreen:
	LeaderboardScreen:

<BackButton@Button>:
	text: "BACK"
	background_color: (0, 0, 0, 1)
	color: (255, 255, 255, 1)
	size_hint: (.125, .125)
	bold: True
	font_size: self.width / 8

<MainMenuBtn@Button>:
	background_color: (255, 255, 255, 1)
	color: (0, 0, 0, 1)
	pos_hint: {'center_x': 0.5}
	size_hint: (0.15, 0.1)
	bold: True
	font_size: self.width / 8
	halign: "center"

<CustomLabel@Label>:
	color: (0, 0, 0, 1)
	bold: True
	font_size: 20
	halign: "center"
	text_size: self.width - 50, None

<ScreenTitleLabel@Label>:
	color: (0,0,0, 1)
	bold: True
	font_size: 35
	halign: "center"  

<PongScreen>:
	name: 'pong'
	AnchorLayout:
		anchor_x: "center"
		anchor_y: "top"
		padding: 50
		
	    BackButton:
		    size: (52, 52)
		    background_color: (255, 255, 255, 1)            
             
	    BackButton:
		    text: "MENU"
		    background_border:
		    on_press:
			    app.pong_game.show_menu()

<ConfigScreen>
	name: 'config'
	player1: player1_left
	player2: player2_right

	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"
		padding: 5

		BackButton:
			on_press: 
				root.manager.transition.direction = 'up'
				root.manager.current = 'mainmenu'
	
	AnchorLayout:
		anchor_x: "center"
		anchor_y: "center"
		padding: 5
		size_hint: 1, .75

		BoxLayout:
			orientation: 'vertical'
			size_hint: .65, .85
			ScreenTitleLabel:
				text: "Game\nConfiguration"
				pos_hint: {'center_x': 0.5}
		    BoxLayout:
		        padding: 20
				orientation: 'horizontal'
				Label:
					text: "Player 1 Name:"
					color: (0, 0, 0, 1)
	            TextInput:
	                padding: 10
					id: player1_left
					size_hint: 1, .5
					pos_hint: {'center_x': 0.2, 'center_y': 0.2}
				
			BoxLayout:
				orientation: 'horizontal'
				padding: 20
                Label:
					text: "Player 2 Name:"
		            color: (0, 0, 0, 1)
				TextInput:
				    padding: 10
					id: player2_right
					size_hint: 1, .5
					pos_hint: {'center_x': 0.2, 'center_y': 0.2}
					

			Button:
				id: play
				text: "Play Now"
				background_color: (0, 0, 0, 1)
				color: (255, 255, 255, 1)
				bold: True
				pos_hint: {'center_x': 0.5}
				size_hint: (0, 0)
				size: (140, 85)
				on_press: 
					root.manager.transition.direction = 'down'
					root.manager.current = 'pong'
					app.root.children[1].setNames(player1_left.text, player2_right.text)
					app.pong_game.run()

<AboutScreen>:
	name: 'about'
	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"
		padding: 5
        
	    BackButton:
		    on_press: 
			    root.manager.transition.direction = 'right'
			    root.manager.current = 'mainmenu'

	ScreenTitleLabel:
		text: "About"
		pos_hint: {'center_x': 0.5, 'center_y': 0.75}               
	
	CustomLabel:
		text: "\nCreators:\n\n Justin Conner \n Reyna Dawkins"
	    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
	    

<HelpScreen>:
	name: 'help'
	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"
		padding: 5
        
	    BackButton:
		    on_press: 
			    root.manager.transition.direction = 'left'
			    root.manager.current = 'mainmenu'

    ScreenTitleLabel:
	    text: "Help"
	    pos_hint: {'center_x': 0.5, 'center_y': 0.75}
    
    CustomLabel:
	    text: "PONG is one of the earliest arcade video games; it is a tennis sports game featuring simple two-dimensional graphics.\n\n Objective:\nto defeat an opponent by earning a higher score."
		pos_hint: {'center_x': 0.5, 'center_y': .5}

<LeaderboardScreen>:
    name: 'leaderboard'
    AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"
		padding: 5
        
        BackButton:
	        on_press: 
		        root.manager.transition.direction = 'up'
		        root.manager.current = 'mainmenu'


<MainMenuScreen>:
	name: 'mainmenu'
	BoxLayout:
		orientation: "vertical"
		background_color: (255, 255, 255, 1)

		Label:
			text: "PONG"
			color: (255, 255, 255, 1)
			size_hint: (0.5, 0.5)
			pos_hint: {'center_x': 0.5}
			bold: True
			font_size: self.width / 5
			halign: "center" 
        
		FloatLayout:        
			MainMenuBtn:
				text: "start"
				pos: (0, self.height * 7)
				on_press: 
					root.manager.transition.direction = 'down'
					root.manager.current = 'config'
			
			MainMenuBtn:
				text: "leaderboards"
				pos: (0, self.height * 6)
				on_press: 
					root.manager.transition.direction = 'down'
					root.manager.current = 'leaderboard'
          
			MainMenuBtn:
				text: "help"
				pos: (0, self.height * 5)
				on_press: 
					root.manager.transition.direction = 'right'
					root.manager.current = 'help'
          
			MainMenuBtn:
				text: "about"
				pos: (0, self.height * 4)
				on_press:
					root.manager.transition.direction = 'left'
					root.manager.current = 'about'
