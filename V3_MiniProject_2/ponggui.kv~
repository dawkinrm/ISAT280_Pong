#:import Window kivy.core.window
#:import Label kivy.uix.label
#:import Button kivy.uix.button
#:import BoxLayout kivy.uix.boxlayout
#:import AnchorLayout kivy.uix.anchorlayout
#:import FloatLayout kivy.uix.floatlayout
#:import Canvas kivy.graphics

MyScreenManager:
    MainMenuScreen:
    AboutScreen:
    HelpScreen:
    ConfigScreen:
    PongScreen:

<BackButton@Button>:
    text: "BACK"
    background_color: (0, 0, 0, 1)
    color: (255, 255, 255, 1)
    size_hint: (0, 0)
    size: (50, 50)
    bold: True
    font_size: 12

<CustomLabel@Label>:
    color: (0,0,0, 1)
    bold: True
    font_size: 20
    halign: "center"
    text_size: self.width - 50, None
    
<ScreenTitleLabel@Label>:
    color: (0,0,0, 1)
    bold: True
    font_size: 35
    halign: "center"

<PongScreen>:
    name: 'pong'
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        padding: 5

        BackButton:
            size: (52, 52)
            background_color: (255, 255, 255, 1)            

        BackButton:
            text: "PAUSE"
            background_border:
            on_press:
                app.pong_game.pause()

    BackButton:
        text: "RESUME"
        background_border:
        on_press:
            app.pong_game.resume()
        

<ConfigScreen>
    name: 'config'
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        padding: 5
        
        BackButton:
            on_press: 
                root.manager.transition.direction = 'up'
                root.manager.current = 'mainmenu'

    BoxLayout:
        FloatLayout:
            ScreenTitleLabel:
                text: "Game\nConfiguration"
                pos_hint: {'center_x': 0.5}
                pos: (0, 100)            
            Button:
                id: play
                text: "Play Now"
                background_color: (0, 0, 0, 1)
                color: (255, 255, 255, 1)
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': .4}
                size_hint: (0, 0)
                size: (140, 85)
                on_press: 
                    root.manager.transition.direction = 'down'
                    root.manager.current = 'pong'
                    app.pong_game.run()
    
        
<AboutScreen>:
    name: 'about'
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        padding: 5
        
        BackButton:
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'mainmenu'
        
    BoxLayout:
        FloatLayout:
            ScreenTitleLabel:
                text: "About"
                pos_hint: {'center_x': 0.5}
                pos: (0, 100)            
            CustomLabel:
                text: "PONG is one of the earliest arcade video games; it is a tennis sports game featuring simple two-dimensional graphics.\n\n Objective:\nto defeat an opponent by earning a higher score."
                pos_hint: {'center_x': 0.5, 'center_y': .42}

<HelpScreen>:
    name: 'help'
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        padding: 5
        
        BackButton:
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'mainmenu'
    BoxLayout:
        FloatLayout:
            ScreenTitleLabel:
                text: "Help"
                pos_hint: {'center_x': 0.5}
                pos: (0, 100)            
            CustomLabel:
                text: "\nCreators:\n\n Justin Conner \n Reyna Dawkins"
                pos_hint: {'center_x': 0.5, 'center_y': .5}
                pos: (0, 165)
    
